import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        
        int cnt = sc.nextInt();
        
        for(int i = 0; i < cnt; i++){
            int a = sc.nextInt();
            String aa = sc.next();
            for(int j = 0; j < aa.length(); j++){
                for(int k = 0; k < a; k++){
                    System.out.print(aa.charAt(j));
                }
            }
            System.out.println("");
        }
    }
}
