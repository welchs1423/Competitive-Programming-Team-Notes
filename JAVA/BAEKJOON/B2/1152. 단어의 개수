import java.util.Scanner;

public class Main{
	public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        
        String param = sc.nextLine();
        
        param = param.trim();
        
        int a = 1;
        
        for(int i = 0; i < param.length(); i++){
            if(param.charAt(i) == ' '){
                a++;
            }
        }
        if(!param.isEmpty()){
            System.out.print(a);
        }else{
            System.out.print(0);
        }
    }
}
