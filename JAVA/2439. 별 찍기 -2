import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        
        int maxNum = sc.nextInt();
        String star = "";
        String blank = "";
        
        for (int i = 1; i <= maxNum; i++){
            for(int j = 0; j < maxNum - i; j++){
                blank += " ";
            }
            star += "*";
            System.out.println(blank + star);
            blank = "";
        }
    }
}
