class Solution {
    public int[] solution(int[] arr, int k) {
                
        int[] answer = new int[arr.length];
        
        if(k % 2 == 1 || k == 1){
            for(int i = 0; i<arr.length; i++){
                answer[i] = arr[i] * k;
            }
        }else if(k % 2 == 0){
            for(int j = 0; j<arr.length; j++){
                answer[j] = arr[j] + k;
            }
        }
        
        return answer;
    }
}
