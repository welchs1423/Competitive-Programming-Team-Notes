class Solution {
    public int[] solution(int n) {
        int a = 0;
        int b = 0;
        
        if(n % 2 == 0){
            a = n/2;
        }else{
            a = n/2+1;
        }
        
        int[] answer = new int[a];
        
        for(int i = 1; i<=n; i++){
            if(i % 2 == 1){
                answer[b] = i;
                b++;
            }
        }
        
        return answer;
    }
}
