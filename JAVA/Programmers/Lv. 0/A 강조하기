class Solution {
    public String solution(String myString) {
        String answer = myString.toLowerCase();
        String realAnswer = "";
        char a = ' ';
        
        for(int i = 0; i<myString.length(); i++){
            a = answer.charAt(i);
            
            if(a == 'a'){
                a = 'A';
            }
            realAnswer += String.valueOf(a);
            
        }
        
        return realAnswer;
    }
}
