class Solution {
    public int solution(int num1, int num2) {
        
        int answer = 0;
        
        boolean first = -50000<= num1 && num1 <= 50000;
        boolean second = -50000 <= num2 && num2 <= 50000;
        
        if(first == true && second == true){
            answer = num1 - num2;
        }
        
        return answer;
        
    }
}
